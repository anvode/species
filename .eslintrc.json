{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "plugins": [
            "jest",
            "react"
        ],
        "sourceType": "module",
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "arrowFunctions": true,
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "settings": {
        "polyfills": [
            "serviceworkers",
            "fetch",
            "URL",
            "navigator",
            "Promise"
        ],
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "16.13.1"
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "quotes": [
            1,
            "single"
        ],
        "no-unused-vars": [
            0
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": 1,
                "outerIIFEBody": 1,
                "FunctionDeclaration": {
                    "parameters": 1,
                    "body": 1
                },
                "FunctionExpression": {
                    "parameters": 1,
                    "body": 1
                }
            }
        ],
        "max-statements": [
            1,
            40
        ],
        "max-depth": [
            1,
            4
        ],
        "complexity": [
            1,
            10
        ],
        "no-console": 1,
        "semi": 2,
        "no-empty": 1,
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-multi-spaces": 1,
        "keyword-spacing": 1
    }
}